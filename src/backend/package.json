{
  "name": "@threatrecon/backend",
  "version": "1.0.0",
  "description": "ThreatRecon Drill Platform Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "scenario:validate": "ts-node scripts/validate-scenarios.ts",
    "export:aar": "ts-node scripts/export-aar.ts"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "socket.io": "^4.7.4",
    "redis": "^4.6.12",
    "bullmq": "^4.15.4",
    "pg": "^8.11.3",
    "knex": "^3.0.1",
    "puppeteer": "^21.6.1",
    "handlebars": "^4.7.8",
    "uuid": "^9.0.1",
    "joi": "^17.11.0",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "winston": "^3.11.0",
    "pino": "^8.17.2",
    "pino-pretty": "^10.3.1",
    "crypto": "^1.0.1",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.1",
    "node-cron": "^3.0.3",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/pg": "^8.10.9",
    "@types/uuid": "^9.0.7",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node-cron": "^3.0.11",
    "@types/jest": "^29.5.8",
    "@types/supertest": "^2.0.16",
    "typescript": "^5.3.0",
    "ts-node": "^10.9.1",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "eslint": "^8.55.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": ["<rootDir>/src"],
    "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts",
      "!src/server.ts"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@/shared/(.*)$": "<rootDir>/src/shared/$1",
      "^../../shared/(.*)$": "<rootDir>/src/shared/$1",
      "^../../shared/types$": "<rootDir>/src/shared/types",
      "^../../shared/types/(.*)$": "<rootDir>/src/shared/types/$1",
      "^./shared/(.*)$": "<rootDir>/src/shared/$1",
      "^./shared/types$": "<rootDir>/src/shared/types"
    },
    "transform": {
      "^.+\\.ts$": ["ts-jest", {
        "tsconfig": {
          "strict": false,
          "noImplicitAny": false,
          "skipLibCheck": true
        }
      }]
    },
    "moduleFileExtensions": ["ts", "js", "json"],
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setup.ts"]
  }
}
