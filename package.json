{
  "name": "threatrecon-drill-platform",
  "version": "1.0.0",
  "description": "Enterprise-grade breach drill automation stack for incident response training",
  "main": "dist/backend/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "dev:backend": "cd src/backend && npm run dev",
    "dev:frontend": "cd src/frontend && npm run dev",
    "build": "npm run build:deploy",
    "build:deploy": "node -e \"const fs=require('fs');const path=require('path');const dist='dist';if(!fs.existsSync(dist))fs.mkdirSync(dist,{recursive:true});fs.cpSync('public',path.join(dist,'public'),{recursive:true,force:true});console.log('âœ… Build complete - static files in dist/public');\"",
    "build:backend": "cd src/backend && npm run build",
    "build:frontend": "cd src/frontend && npm run build",
    "test": "npm run test:backend && npm run test:frontend",
    "test:backend": "cd src/backend && npm test",
    "test:frontend": "cd src/frontend && npm test",
    "test:e2e": "cd src/frontend && npm run test:e2e",
    "lint": "npm run lint:backend && npm run lint:frontend",
    "lint:backend": "cd src/backend && npm run lint",
    "lint:frontend": "cd src/frontend && npm run lint",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up",
    "db:migrate": "cd src/backend && npm run db:migrate",
    "db:seed": "cd src/backend && npm run db:seed",
    "scenario:validate": "cd src/backend && npm run scenario:validate",
    "export:aar": "cd src/backend && npm run export:aar",
    "smoke": "node scripts/smoke-test.js",
    "kali:generate": "node scripts/generate_kali_snapshot.js",
    "kali:test": "node scripts/test_kali_handlers.js",
    "test:ui": "node scripts/test_terminal_ui.js",
    "start": "cd src/backend && npm start"
  },
  "keywords": [
    "incident-response",
    "cybersecurity",
    "breach-drill",
    "tabletop-exercise",
    "training",
    "simulation",
    "enterprise",
    "compliance",
    "audit"
  ],
  "author": "ThreatRecon Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "workspaces": [
    "src/backend",
    "src/frontend"
  ],
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "typescript": "^5.3.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/threatrecon/drill-platform.git"
  },
  "bugs": {
    "url": "https://github.com/threatrecon/drill-platform/issues"
  },
  "homepage": "https://threatrecon.io",
  "dependencies": {
    "@vercel/analytics": "^1.5.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.18",
    "express": "^5.1.0",
    "pg": "^8.11.3",
    "serverless-http": "^4.0.0",
    "socket.io": "^4.8.1",
    "ws": "^8.14.2"
  }
}
